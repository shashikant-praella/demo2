<ul class="navbar-nav align-items-center w-100 justify-content-between font-size-sm">
    {% for link in linklists[section.settings.menu].links %}
        {% assign child_list_handle = link.title | handleize %}
        <!-- ============================================= -->
        {%- liquid 
            assign menuType = 'normal'
            assign megaMenuBlock = null
            for block in section.blocks
                if block.type == 'megamenu' and block.settings.title == link.title
                    assign menuType = 'megamenu'
                    assign megaMenuBlock = block.settings
                    break
                endif    
            endfor
        -%}
        {% if menuType == 'megamenu' %}
            <li class="nav-item dropdown {% if menuType == 'megamenu' %}megamenu{% endif %} {% if link.active %}active{% endif %}" >
                <a data-href="{{ link.url }}" {% if menuType == 'megamenu' %}is="drop-down"{%- endif -%} class="nav-link d-flex align-items-center justify-content-between {{ link.handle }}" tabindex="0" role="button" data-toggle="dropdown" aria-expanded="false" aria-haspopup="menu" name="{{ link.title }}" title="{{ link.title }}" aria-label="{{ link.title }}">
                    <span>{{ link.title }}</span> <i class="icon-arrow-down ms-1 icon-size-10 fw-bold"></i>
                </a>
                <ul class="dropdown-menu py-4 border-0 rounded-0 my-0">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9">
                                <ul class="list-unstyled row {{ megaMenuBlock.column }}">
                                    {%- for childlink in menus[child_list_handle].links -%}
                                    {%- assign third_list_handle = childlink.title | handleize -%}
                                    <li class="col">
                                        <h6 class="pb-2 mb-0 text-primary font-size-sm fw-bold">{{ childlink.title }}</h6>
                                        <ul class="list-unstyled">
                                            {%- for thirdlink in menus[third_list_handle].links -%}
                                            <li class="nav-item px-0">
                                                <a href="{{ thirdlink.url }}" class="nav-link link-view-all px-0 {%- if forloop.last and thirdlink.title == "View All" -%}&nbsp; fw-bold {%- endif -%}" name="{{ thirdlink.title }}" title="{{ thirdlink.title }}" aria-label="{{ thirdlink.title }}">{{ thirdlink.title }}</a>
                                            </li>
                                            {%- endfor -%}
                                        </ul>
                                    </li>
                                    {%- endfor -%}
                                </ul>
                            </div>
                            {% if megaMenuBlock != null %}
                            <div class="col-md-3"> 
                                <div class="text-center d-flex flex-column">
                                    {% if megaMenuBlock.image %}
                                        <div class="megamenu-img">
                                            {% comment %} {% if megaMenuBlock.link_url != '' %}
                                                <a href="{{ megaMenuBlock.link_url }}" class="link-img">
                                            {% endif %}
                                            {% if megaMenuBlock.link_url != '' %}
                                            </a>
                                          {% endif %} {% endcomment %}
                                            <img
                                                class="img-fluid {{megaMenuBlock.image.width}}"
                                                src="{{ megaMenuBlock.image | image_url }}" 
                                                srcset="
                                                {%- if megaMenuBlock.image.width >= 250 -%}{{ megaMenuBlock.image | image_url: width: 250 }} 250w,{%- endif -%}
                                                {%- if megaMenuBlock.image.width >= 360 -%}{{ megaMenuBlock.image | image_url: width: 360 }} 360w,{%- endif -%}
                                                {%- if megaMenuBlock.image.width >= 520 -%}{{ megaMenuBlock.image | image_url: width: 520 }} 520w,{%- endif -%}"
                                                loading="lazy" 
                                                sizes="(min-width: 992px) 400px, 50px"
                                                alt="Megamenu for {{ link.title }}" 
                                                class="mb-3 img-fluid" 
                                                height="300" 
                                                width="300" />
                                                
                                                {% if megaMenuBlock.link_text != '' %}
                                                    <a href="{{ megaMenuBlock.link_url }}" class="text-uppercase link-text fw-medium">{{ megaMenuBlock.link_text }}</a>
                                                {% endif %}
                                        </div>
                                        
                                      
                                    {% endif %}
                                    
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </ul> 
            </li>
            {% else %}
                {% if menus[child_list_handle].links != blank  %}    
                <li class="nav-item dropdown {% if link.active %}active{% endif %}" >
                    <a data-href="{{ link.url }}" {%- if menus[child_list_handle].links.size > 0 -%}is="drop-down"{%- endif -%} class="nav-link d-flex align-items-center justify-content-between {{ link.handle }}" tabindex="0" role="button" data-toggle="dropdown" aria-expanded="false" aria-haspopup="menu" name="{{ link.title }}" title="{{ link.title }}" aria-label="{{ link.title }}">
                        <span>{{ link.title }}</span> <i class="icon-arrow-down ms-1 icon-size-10 fw-bold"></i>
                    </a>
                    <ul class="dropdown-menu" data-type="content">
                        {% for childlink in menus[child_list_handle].links %}
                            {% assign subchild_list_handle = childlink.title | handleize %}
                            {% if menus[subchild_list_handle].links != blank %}
                                <li class="nav-item dropdown {% if childlink.active %} active{% endif %}" >
                                    <a data-href="{{ childlink.url }}" {%- if menus[subchild_list_handle].links.size > 0 -%}is="drop-down"{%- endif -%} class="nav-link d-flex align-items-center justify-content-between {{ childlink.handle }}" tabindex="0" role="button" data-toggle="dropdown" aria-expanded="false" aria-haspopup="menu" name="{{ childlink.title }}" title="{{ childlink.title }}" aria-label="{{ childlink.title }}">
                                        <span>{{ childlink.title }}</span> <i class="icon-arrow-down ms-1 icon-size-10 fw-bold"></i>
                                    </a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link d-flex align-items-center justify-content-between{% if childlink.active %} active{% endif %} {{ childlink.handle }}" is="simple-menu-item" href="{{ childlink.url }}" name="{{ childlink.title }}" title="{{ childlink.title }}" aria-label="{{ childlink.title }}">
                                        {{ childlink.title }}
                                    </a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </li>    
                {% else %}
                    <li class="nav-item {% if link.active %} active{% endif %}">
                        <a class="nav-link {{ link.handle }} {%- if forloop.last -%}text-primary{%- endif -%}" href="{{ link.url }}" is="simple-menu-item" name="{{ link.title }}" title="{{ link.title }}" aria-label="{{ link.title }}">
                            {{ link.title }}
                        </a>
                    </li>
                {% endif %}
        {% endif %}
        <!--============  MEGAMENU END  =============-->
        <!----------  Simple Nav Dropdown  ---------->   
        
    {% endfor %}
</ul> 


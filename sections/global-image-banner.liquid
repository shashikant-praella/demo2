                {
                    "value": "center",
                    "label": "t:sections.image-banner.settings.desktop_text_box_position.options__2.label"
                },
                {
                    "value": "flex-end",
                    "label": "t:sections.image-banner.settings.desktop_text_box_position.options__3.label"
                }

            "max": 1,
            "step": 0.1,
            "default": 0.5
        },
        {
            "type": "select",
            "id": "height",
            "label": "Section Height",
            "options": [
                {
                    "value": "shortheight",
                    "label": "Short"
                },
                {
                    "value": "tallheight",
                    "label": "Tall"
                },
                {
                    "value": "fullheight",
                    "label": "Full Height"
                }
            ],
            "default": "tallheight"
        },
        {
            "type": "select",
            "id": "desktop_text_box_position",
            "options": [
                {
                    "value": "flex-start",
                    "label": "t:sections.image-banner.settings.desktop_text_box_position.options__1.label"
